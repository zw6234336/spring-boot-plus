<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.geekidea.boot.material.mapper.MaterialUnitMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.geekidea.boot.material.entity.MaterialUnit">
        <id column="id" property="id"/>
        <result column="unit_code" property="unitCode"/>
        <result column="unit_name" property="unitName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, unit_code, unit_name, created_at, updated_at, is_deleted
    </sql>

    <!-- 分页查询 -->
    <select id="getPage" resultType="io.geekidea.boot.material.vo.MaterialUnitVo">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM material_unit
        <where>
            is_deleted = 0
            <if test="query.unitCode != null and query.unitCode != ''">
                AND unit_code LIKE CONCAT('%', #{query.unitCode}, '%')
            </if>
            <if test="query.unitName != null and query.unitName != ''">
                AND unit_name LIKE CONCAT('%', #{query.unitName}, '%')
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <!-- 根据ID查询详情 -->
    <select id="getById" resultType="io.geekidea.boot.material.vo.MaterialUnitVo">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM material_unit
        WHERE id = #{id} AND is_deleted = 0
    </select>

</mapper>